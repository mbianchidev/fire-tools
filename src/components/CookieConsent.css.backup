/* Cookie consent banner */
.cookie-banner {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(10px);
  box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.15);
  z-index: 9999;
  padding: 1.5rem;
  border-top: 3px solid #5568d4;
  animation: slideUp 0.4s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.cookie-banner-content {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  gap: 2rem;
  justify-content: space-between;
}

.cookie-banner-text {
  flex: 1;
  min-width: 0;
}

.cookie-banner-title {
  margin: 0 0 0.5rem 0;
  font-size: 1.2rem;
  color: #333;
  font-weight: 600;
}

.cookie-banner-description {
  margin: 0 0 0.5rem 0;
  color: #555;
  line-height: 1.6;
  font-size: 0.95rem;
}

.cookie-banner-description strong {
  color: #333;
  font-weight: 600;
}

.cookie-banner-links {
  margin: 0;
  font-size: 0.9rem;
  color: #666;
}

.cookie-banner-links a {
  color: #5568d4;
  text-decoration: underline;
  font-weight: 500;
  transition: color 0.2s;
}

.cookie-banner-links a:hover {
  color: #764ba2;
}

.cookie-banner-links a:focus {
  outline: 3px solid #5568d4;
  outline-offset: 2px;
  border-radius: 2px;
}

.cookie-banner-actions {
  flex-shrink: 0;
}

.cookie-btn-acknowledge {
  background: linear-gradient(135deg, #5568d4 0%, #764ba2 100%);
  color: white;
  border: none;
  padding: 0.875rem 2rem;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s;
  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
  min-height: 44px;
  min-width: 100px;
  white-space: nowrap;
}

.cookie-btn-acknowledge:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
}

.cookie-btn-acknowledge:focus {
  outline: 3px solid #5568d4;
  outline-offset: 2px;
}

.cookie-btn-acknowledge:active {
  transform: translateY(0);
  box-shadow: 0 2px 10px rgba(102, 126, 234, 0.3);
}

/* Mobile responsive - Tablet portrait and below */
@media (max-width: 768px) {
  .cookie-banner {
    padding: 1.25rem 1rem;
  }

  .cookie-banner-content {
    flex-direction: column;
    gap: 1.25rem;
    align-items: stretch;
  }

  .cookie-banner-title {
    font-size: 1.1rem;
  }

  .cookie-banner-description {
    font-size: 0.9rem;
  }

  .cookie-banner-links {
    font-size: 0.85rem;
  }

  .cookie-banner-actions {
    width: 100%;
  }

  .cookie-btn-acknowledge {
    width: 100%;
    padding: 1rem;
    font-size: 1rem;
    min-height: 48px;
  }
}

/* Mobile small */
@media (max-width: 480px) {
  .cookie-banner {
    padding: 1rem 0.875rem;
  }

  .cookie-banner-content {
    gap: 1rem;
  }

  .cookie-banner-title {
    font-size: 1rem;
    margin-bottom: 0.375rem;
  }

  .cookie-banner-description {
    font-size: 0.875rem;
    line-height: 1.5;
    margin-bottom: 0.375rem;
  }

  .cookie-banner-links {
    font-size: 0.8rem;
  }

  .cookie-btn-acknowledge {
    font-size: 0.95rem;
  }
}

/* Large screens */
@media (min-width: 1440px) {
  .cookie-banner {
    padding: 2rem 3rem;
  }

  .cookie-banner-content {
    max-width: 1400px;
  }

  .cookie-banner-title {
    font-size: 1.3rem;
  }

  .cookie-banner-description {
    font-size: 1rem;
  }

  .cookie-btn-acknowledge {
    padding: 1rem 2.5rem;
    font-size: 1.05rem;
  }
}

/* 4K displays */
@media (min-width: 2560px) {
  .cookie-banner {
    padding: 2.5rem 4rem;
  }

  .cookie-banner-content {
    max-width: 2000px;
  }

  .cookie-banner-title {
    font-size: 1.5rem;
  }

  .cookie-banner-description {
    font-size: 1.1rem;
  }

  .cookie-banner-links {
    font-size: 1rem;
  }

  .cookie-btn-acknowledge {
    padding: 1.25rem 3rem;
    font-size: 1.15rem;
    min-height: 56px;
  }
}

/* Reduced motion for accessibility */
@media (prefers-reduced-motion: reduce) {
  .cookie-banner {
    animation: none;
  }

  .cookie-btn-acknowledge:hover {
    transform: none;
  }

  .cookie-btn-acknowledge:active {
    transform: none;
  }
}

/* Print - hide banner */
@media print {
  .cookie-banner {
    display: none;
  }
}
