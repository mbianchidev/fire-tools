.profile-menu-container {
  position: relative;
  display: flex;
  align-items: center;
}

.profile-icon-button {
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.profile-icon {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: linear-gradient(135deg, #5568d4 0%, #764ba2 100%);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: 14px;
  transition: transform 0.2s, box-shadow 0.2s;
}

.profile-icon-button:hover .profile-icon {
  transform: scale(1.05);
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
}

.profile-dropdown {
  position: absolute;
  top: calc(100% + 8px);
  right: 0;
  min-width: 200px;
  background: white;
  border-radius: 8px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  z-index: 1000;
  overflow: hidden;
  animation: dropdownSlideIn 0.2s ease-out;
}

@keyframes dropdownSlideIn {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.profile-dropdown-header {
  padding: 12px 16px;
  background: linear-gradient(135deg, #5568d4 0%, #764ba2 100%);
  color: white;
}

.profile-name {
  font-weight: 600;
  font-size: 14px;
}

.profile-dropdown-divider {
  height: 1px;
  background: #e0e0e0;
}

.profile-dropdown-item {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  color: #333;
  text-decoration: none;
  font-size: 14px;
  transition: background-color 0.2s;
}

.profile-dropdown-item:hover {
  background-color: #f5f5f5;
}

.dropdown-icon {
  margin-right: 10px;
  font-size: 16px;
}

/* Mobile responsive */
@media (max-width: 768px) {
  .profile-dropdown {
    min-width: 180px;
  }
  
  .profile-icon {
    width: 36px;
    height: 36px;
    font-size: 12px;
  }
}
